<div class="d-flex justify-content-center">
  <div>
    <h1><%= @cocktail.name %> recipe:</h1>
    <div>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% doses = @cocktail.doses %>
      <h3 class="text-center">DOSES</h3>
      <% doses.each do |dose| %>
      <ul class="list-group">
        <li class="list-group-item">
          <p><%= dose.description %> | <%= dose.ingredient.name %>
             <%= link_to "Delete", dose_path(dose.id), class: "btn btn-warning btn-sm", method: :delete,
                      data: { confirm: "Are you sure?" }%></p>
        </li>
      </ul>
      <% end %>
    </div>
    <div class="d-flex justify-content-around mt-3">
      <div>
        <%= link_to "Show all cocktails", cocktails_path, class: "btn btn-outline-primary btn-sm" %>
      </div>
      <div>
        <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-success btn-sm" %>
      </div>
    </div>
  </div>
</div>

